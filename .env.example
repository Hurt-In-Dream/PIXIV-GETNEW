# Environment Variables for Pixiv-Vercel-Sync
# Copy this file to .env.local and fill in your values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Cloudflare R2 Configuration
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=your_r2_bucket_name
R2_PUBLIC_URL=https://your-bucket.r2.dev

# Pixiv Authentication
# Option 1: PHPSESSID (from browser cookies)
PIXIV_PHPSESSID=your_pixiv_phpsessid

# Vercel Cron Secret (for authenticating cron requests)
CRON_SECRET=your_random_secret_string

# WeChat Work (企业微信) Webhook for Notifications (Optional)
# Create a bot in WeChat Work group chat and copy the webhook URL
# Format: https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=YOUR_KEY
WECOM_WEBHOOK_URL=

# Background Image URL (Optional)
# Set a custom background image for the dashboard
# Example: https://pic.wzkws116.xyz/pic?img=ua
NEXT_PUBLIC_BACKGROUND_URL=

# Qmsg酱 QQ 消息推送 (Optional)
# 从 https://qmsg.zendee.cn 获取 KEY
# 用于推送通知到 QQ 私聊
QMSG_KEY=

# Site URL (Optional, for sitemap)
# 你的网站域名，用于生成 sitemap
NEXT_PUBLIC_SITE_URL=https://your-domain.vercel.app
